{
  "name": "guineafowl",
  "version": "1.0.0",
  "description": "News API project",
  "author": "yoshixmk",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist",
    "compile": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "ts-node-dev --respawn src/index.ts",
    "lint": "eslint --ext .ts,.js --ignore-path .gitignore .",
    "lint-fix": "eslint --ext .ts,.js --ignore-path .gitignore . --fix"
  },
  "lint-staged": {
    "*.{js,ts}": "yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "newsapi": "^2.4.1"
  },
  "devDependencies": {
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "@typescript-eslint/typescript-estree": "^3.9.1",
    "eslint": "^6.1.0",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.60",
    "typescript": "^4.0.2"
  }
}
